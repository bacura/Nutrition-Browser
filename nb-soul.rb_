def db_process( query, db_err, html_opt )
  begin
    db = Mysql2::Client.new(:host => "#{$MYSQL_HOST}", :username => "#{$MYSQL_USER}", :password => "#{$MYSQL_PW}", :database => "#{$MYSQL_DB}", :encoding => "utf8" )
    t = query.chop
    if /\;/ =~ t
        puts "<div class=\"container\">データベース処理エラー(#{db_err})が発生しました。処理を中止します。魂</div>"
        exit( 9 )
    end

    res = db.query( query )
    db.close
  rescue
    if html_opt
      html_init( nil )
      html_head( nil )
      html_top( nil )
    end
    puts "<div class=\"container\">データベース処理エラー(#{db_err})が発生しました。処理を中止します。</div>"
  end

  return res
end


