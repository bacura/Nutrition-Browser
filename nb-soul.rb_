def generate_code( uname, c )
  require 'securerandom'

  code = uname[0, 2]
  code = "x" + uname[0, 1] if code == nil
  code = "#{code}-#{c}-#{SecureRandom.hex( 2 )}-#{SecureRandom.hex( 2 )}"

  return code
end


#### 食品重量の決定
def food_weight_check( food_weight )
  fw = food_weight
  fw = '100' if fw == nil || fw == '' || fw == '0'
  fw.tr!( "０-９", "0-9" ) if /[０-９]/ =~ fw
  fw.sub!( '．', '.' )
  fw.sub!( '、', '.' )
  fw.sub!( ',', '.' )
  fw.sub!( '。', '.' )
  fw.sub!( '／', '/')
  fw.sub!( '＋', '+')
  uv = BigDecimal( '0' )

  # 分数処理
  if /\d+\+\d+\/\d+/ =~ fw
    # 帯分数
    a = fw.scan( /(\d+)\+\d+\/\d+/ )[0][0].to_i
    b = fw.scan( /\d+\+(\d+)\/\d+/ )[0][0].to_i
    c = fw.scan( /\d+\+\d+\/(\d+)/ )[0][0].to_i
    if c == 0
      fw = 100
      uv = 100
    else
      uv = BigDecimal( b ) / c + a
    end
  elsif /\d+\/\d+/ =~ fw
    # 仮分数
    b = fw.scan( /(\d+)\/\d+/ )[0][0].to_i
    c = fw.scan( /\d+\/(\d+)/ )[0][0].to_i
    if c == 0
      fw = 100
      uv = 100
    else
      uv = BigDecimal( b ) / c
    end
  else
    uv = BigDecimal( fw )
  end

  return fw, uv
end


